@model  BlogIdentity.Models.NewArticleViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <label asp-for="Articles.Title" class="control-label"></label>
                <input asp-for="Articles.Title" class="form-control" />
                <label asp-for="Articles.Content" class="control-label"></label>                
                <textarea asp-for="Articles.Content" class="control-label"></textarea>
                <span asp-validation-for="Articles.Title" class="text-danger"></span>

                <label asp-for="TagsList">:</label><br />             
               
                @foreach( var item in Model.TagsList)
                    {
                      <tr>
                        <td class="js-export-checkbox">
                           <input  type="checkbox"  />
                                    @item.TagName          
                        </td>
                      </tr>
                    }
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
